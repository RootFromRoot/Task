<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ui.activity.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:id="@+id/cv_viewers_holder"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_viewers"
                        android:layout_margin="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_remove_red_eye_black_24dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_viewers_count"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/iv_viewers"
                />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:id="@+id/cv_likes_holder"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_likes"
                        android:layout_margin="8dp"

                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_likes_count"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/iv_likes"
                       />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@id/iv_likes"
                        android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_likes_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:id="@+id/cv_comments_holder"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_comment"
                        android:layout_margin="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_comment_black_24dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_comments_count"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/iv_comment"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@id/iv_comment"
                        android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_comments_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:id="@+id/cv_mentions_holder"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_mentions"
                        android:layout_margin="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_people_outline_black_24dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_mentions_count"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/iv_mentions"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@id/iv_mentions"
                        android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_mentions_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:id="@+id/cv_reposts_holder"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_reposts"
                        android:layout_margin="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_reply_black_24dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_reposts_count"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/iv_reposts"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@id/iv_reposts"
                        android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_reposts_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:id="@+id/cv_bookmarks_holder"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_bookmarks"
                        android:layout_margin="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_bookmark_border_black_24dp"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_bookmarks_count"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/iv_bookmarks"
                />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>